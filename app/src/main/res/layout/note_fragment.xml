<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.fragment.note.NoteFragment">


    <TextView
        android:id="@+id/favorites_title"
        style="@style/BoldTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Заметка"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:layout_marginStart="20dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorites_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/my_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:hint="Заметка" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/other_btn_background"
        android:fontFamily="@font/roboto_medium"

        android:gravity="center"

        android:text="Удалить заметку"
        android:textColor="#D67171"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_input" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_note"
        style="@style/BoldTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"


        android:layout_marginTop="52dp"
        android:backgroundTint="@drawable/selector_blue_button"
        android:letterSpacing="0.01"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"

        app:cornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
